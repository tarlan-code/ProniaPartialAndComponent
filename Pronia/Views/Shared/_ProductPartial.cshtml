@model IEnumerable<Product>

@section scripts{
    <script>
        
    </script>
}


@foreach (Product prod in Model)
{

    <div class="col-xl-3 col-md-4 col-sm-6 mt-4">
        <div class="product-item">
            <div class="product-img">
                <a href="shop.html">
                    <img class="primary-img"
                     src="~/assets/images/product/@prod.ProductImages?.FirstOrDefault(p=> p.IsCover == true).Image"
                     alt="Product Images" />
                    @if ((prod.ProductImages.FirstOrDefault(p => p.IsCover == false)) is not null)
                    {
                        <img class="secondary-img"
                     src='~/assets/images/product/@prod.ProductImages?.FirstOrDefault(p=> p.IsCover == false).Image'
                     alt="Product Images" />
                    }

                </a>
                <div class="product-add-action">
                    <ul>
                        <li>
                            <a href="wishlist.html"
                           data-tippy="Add to wishlist"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder">
                                <i class="pe-7s-like"></i>
                            </a>
                        </li>
                        <li class="quuickview-btn">
                            <a 
                            class="quickView"
                           data-tippy="Quickview"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder"
                           asp-action="QuickView" 
                            asp-route-Id="@prod.Id">
                                <i class="pe-7s-look"></i>
                            </a>
                        </li>
                        <li>
                            <a href="cart.html"
                           data-tippy="Add to cart"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder">
                                <i class="pe-7s-cart"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name" href="shop.html">@prod.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">$ @(prod.SellPrice * (100 - prod.Discount) / 100)</span>
                </div>
                <div class="rating-box">
                    <ul>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

    